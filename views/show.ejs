<head>
    <style>
        .show-container {
  max-width: 800px;
  margin: 40px auto;
  padding: 20px;
  border-radius: 12px;
  background-color: #fff;
  box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
  font-family: 'Arial', sans-serif;
}

.show-container h1 {
  font-size: 2rem;
  margin-bottom: 20px;
  color: #FF385C;
}

.show-container img {
  width: 100%;
  max-height: 400px;
  object-fit: cover;
  border-radius: 12px;
  margin-bottom: 20px;
}

.show-container p {
  font-size: 1rem;
  margin: 10px 0;
  color: #444;
}

.back-btn {
  display: inline-block;
  margin-top: 20px;
  padding: 10px 20px;
  background-color: #FF385C;
  color: white;
  border: none;
  border-radius: 25px;
  text-decoration: none;
  font-size: 0.9rem;
  transition: background-color 0.3s ease;
}

.back-btn:hover {
  background-color: #e0294a;
}

    </style>
</head>
<body>
  <div class="show-container">
    <h1><%= listing.title %></h1>

    <img src="<%= listing.img %>" alt="<%= listing.title %> Image">

    <p><strong>Description:</strong> <%= listing.description %></p>
    <p><strong>Country:</strong> <%= listing.country %></p>
    <p><strong>Location:</strong> <%= listing.location %></p>

    <% let formattedPrice = listing.price.toLocaleString('en-IN'); %>
    <p><strong>Price:</strong> ₹<%= formattedPrice %></p>

    <a class="back-btn" href="/listings">Back to All Listings</a>
    <br>
    <br>
    <a href="/listings/<%= listing._id %>/reviews/new">
  <button>Leave a Review</button>
</a>


<!-- .... -->
<h3 class="mt-5">Reviews</h3>

<% if (!review1.reviews || review1.reviews.length === 0) { %>
  <p class="text-muted">No reviews yet.</p>
<% } else { %>
  <div class="row">
    <% review1.reviews.forEach(review => { %>
      <div class="col-md-4 mb-4">
        <div class="card shadow-sm">
          <div class="card-body">
            <h5 class="card-title">⭐ Rating: <%= review.rating %></h5>
            <p class="card-text"><%= review.comment %></p>
            <p class="card-text">
              <small class="text-muted">
                Posted on <%= review.createdAt.toDateString() %>
              </small>
            </p>
            <br>
            <form action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE" method="POST">
  <button class="btn btn-danger btn-sm">Delete</button>
</form>
<br>
          </div>
        </div>
      </div>
    <% }) %>
  </div>
<% } %>


  </div>
</body>
